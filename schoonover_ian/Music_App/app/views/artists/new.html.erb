<h1>New Artist</h1>

<%= simple_form_for(@artist, html: {:class => 'form-horizontal'} ) do |f| %>
<p>
	<%= f.input :name, label: false, input_html: {:class => 'form-control', placeholder: "Name:"} %>
	<%= f.association :label %>
</p>
	<p><%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-success' %> </p>
<% end %>
<p>
<%= link_to 'Back', label_artists_path %>
</p>